import random

def play_game():
    secret_number = random.randint(1, 10)
    attempts = 0
    guess = None

    print("–ü—Ä–∏–≤–µ—Ç! –Ø –∑–∞–≥–∞–¥–∞–ª —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 10.")
    
    while guess != secret_number:
        guess = input("–£–≥–∞–¥–∞–π —á–∏—Å–ª–æ: ")

        if not guess.isdigit():
            print("–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏ —á–∏—Å–ª–æ!")
            continue

        guess = int(guess)
        attempts += 1

        if guess < secret_number:
            print("–ó–∞–≥–∞–¥–∞–Ω–Ω–æ–µ —á–∏—Å–ª–æ –±–æ–ª—å—à–µ.")
        elif guess > secret_number:
            print("–ó–∞–≥–∞–¥–∞–Ω–Ω–æ–µ —á–∏—Å–ª–æ –º–µ–Ω—å—à–µ.")
        else:
            print(f"–ü—Ä–∞–≤–∏–ª—å–Ω–æ! –¢—ã —É–≥–∞–¥–∞–ª –∑–∞ {attempts} –ø–æ–ø—ã—Ç–æ–∫ üéâ")

    again = input("–•–æ—á–µ—à—å —Å—ã–≥—Ä–∞—Ç—å –µ—â—ë —Ä–∞–∑? (–¥–∞/–Ω–µ—Ç): ")
    if again.lower() == "–¥–∞":
        play_game()
    else:
        print("–ü–æ–∫–∞! –°–ø–∞—Å–∏–±–æ –∑–∞ –∏–≥—Ä—É üòä")

play_game()
